
<h1>Listing Articles</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article)%> </td>
            <td><%= link_to 'Destroy', article_path(article), data: {turbo_method: :delete, turbo_confirm: 'Emin misiniz?'} %></td>
        </tr>
    <% end %>
</table>

